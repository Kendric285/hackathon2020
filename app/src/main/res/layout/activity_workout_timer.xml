<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutTimer">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="398dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="310dp" />

    <EditText
        android:id="@+id/edit_text_work"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="209dp"
        android:hint="Work"
        android:inputType="number"
        android:maxLength="4" />

    <EditText
        android:id="@+id/edit_text_workoutname"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="274dp"
        android:hint="Activity Name"
        android:inputType="number"
        android:maxLength="4" />

    <EditText
        android:id="@+id/edit_text_rest"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="139dp"
        android:layout_marginBottom="142dp"
        android:hint="Rest"
        android:inputType="number"
        android:maxLength="4" />


    <EditText
        android:id="@+id/edit_text_cycles"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="68dp"
        android:hint="Cycles"
        android:inputType="number"
        android:maxLength="4" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="436dp"
        android:text="DONE"
        android:visibility="invisible"
        tools:visibility="visible"

        />

    <Button
        android:id="@+id/button_timer_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="12dp"
        android:text="Set" />



    <View
        android:id="@+id/view2"
        android:layout_width="350dp"
        android:layout_height="159dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="498dp" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="528dp"
        android:background="#00FFFFFF"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/countdown_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="170dp"

        android:layout_marginBottom="605dp"
        android:background="#00FFFFFF"
        android:text=""
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_burnedCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="356dp"
        android:text="hello"
        android:textSize="30dp"
        android:visibility="invisible"
        tools:visibility="visible"


        />

</RelativeLayout>