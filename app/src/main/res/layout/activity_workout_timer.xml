<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".WorkoutTimer">


    <View
        android:id="@+id/view"
        android:layout_width="377dp"
        android:layout_height="373dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="313dp"
        android:background="@drawable/workout_timer_background" />

    <EditText
        android:id="@+id/edit_text_work"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="171dp"
        android:background="@drawable/workout_timer_background"
        android:hint="Work"
        android:inputType="number"

        android:maxLength="4"
        android:textColor="@android:color/black"
        android:textColorHint="#C8C8C8" />


    <EditText
        android:id="@+id/edit_text_workoutname"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="220dp"
        android:background="@drawable/workout_timer_background"
        android:hint="Activity Name"
        android:inputType="text"
        android:maxLength="10"
        android:textColor="@android:color/black"
        android:textColorHint="#C8C8C8" />

    <EditText
        android:id="@+id/edit_text_rest"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/workout_timer_background"
        android:hint="Rest"

        android:inputType="number"

        android:maxLength="4"
        android:textColor="@android:color/black"
        android:textColorHint="#C8C8C8" />

    <EditText
        android:id="@+id/edit_text_cycles"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/workout_timer_background"
        android:hint="Cycles"

        android:inputType="number"

        android:maxLength="4"
        android:textColor="@android:color/black"
        android:textColorHint="#C8C8C8" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="154dp"
        android:layout_marginBottom="344dp"
        android:background="@drawable/button_background"

        android:text="DONE"
        android:visibility="invisible"
        tools:visibility="visible"

        />

    <Button
        android:id="@+id/button_timer_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="12dp"
        android:text="Set"
        android:background="@drawable/button_background"/>


    <View
        android:id="@+id/view2"
        android:layout_width="350dp"
        android:layout_height="159dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="515dp"
        android:background="@drawable/background_timer" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="528dp"
        android:background="#00FFFFFF"
        android:text="00:00"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/countdown_task"
        android:layout_width="222dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="84dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="618dp"
        android:background="#00FFFFFF"

        android:text="Workout Timer"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/text_view_burnedCalories"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="333dp"
        android:background="@drawable/background_timer"
        android:text="hello"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"

        android:textStyle="bold"


        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_view_cycles"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="423dp"
        android:background="@drawable/background_timer"
        android:text="Cycles:"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30dp"

        android:textStyle="bold"


        tools:visibility="visible" />
</RelativeLayout>