<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/home"
        android:layout_width="399dp"
        android:layout_height="66dp"
        android:layout_alignStart="@+id/toTimer"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="31dp"
        android:gravity="left|center"
        android:text="QUARIN-SIZE"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="52dp"
        android:layout_height="61dp"
        android:layout_alignBottom="@+id/home"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="2dp"
        android:foregroundGravity="center"
        android:onClick="settings"
        app:srcCompat="@drawable/settings" />

    <Button
        android:id="@+id/toFoodTracker"
        android:layout_width="259dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="0dp"
        android:text="Food Track"
        android:background="@drawable/button_background"
        />

    <Button
        android:id="@+id/toTimer"
        android:layout_width="222dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="357dp"
        android:layout_marginEnd="-74dp"
        android:layout_toStartOf="@+id/toFoodTracker"
        android:text="Workout"
        android:background="@drawable/button_background"
        />

    <Button
        android:id="@+id/toCalendar"
        android:layout_width="363dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="27dp"
        android:text="Calender"
        android:background="@drawable/button_background"
        />

    <Button
        android:id="@+id/toWorkoutsActivity"
        android:layout_width="338dp"
        android:layout_height="72dp"
        android:layout_below="@+id/toTimer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="-9dp"
        android:text="Workout Examples"
        android:background="@drawable/button_background"
        />

</RelativeLayout>
