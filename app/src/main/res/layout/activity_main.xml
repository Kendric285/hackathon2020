<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/home"
        android:layout_width="361dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/toTimer"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="27dp"
        android:gravity="left|center"
        android:text="QUARIN-SIZE"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="41dp"
        android:layout_height="61dp"
        android:layout_alignBottom="@+id/home"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="0dp"
        android:foregroundGravity="center"
        android:onClick="settings"
        app:srcCompat="@drawable/settings" />

    <Button
        android:id="@+id/toFoodTracker"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/roundcorner2"
        android:textSize="50dp"
        android:text="Food Track" />

    <Button
        android:id="@+id/toTimer"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="-411dp"
        android:layout_toStartOf="@+id/toFoodTracker"
        android:background="@drawable/roundcorner2"
        android:textSize="50dp"
        android:text="Workout" />

    <Button
        android:id="@+id/toCalendar"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/roundcorner2"
        android:textSize="50dp"
        android:text="Calender" />

</RelativeLayout>